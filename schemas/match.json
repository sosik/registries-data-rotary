{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/match#",
    "new": {
        "title": "Nové stretnutie",
        "xxtransCode": "schema.stadium.title",
        "table": "matches",
        "_security": {
            "_create": {
                "_static": [
                    "Security - write"
                ]
            },
            "_read": {
                "_static": [
                    "Security - read"
                ]
            },
            "_modify": {
                "_static": [
                    "Security - write"
                ]
            }
        },
        "listFields": [
            {
                "field": "baseData.homeClub.refData.name",
                "title": "Domáce družstvo"
            },
            {
                "field": "baseData.awayClub.refData.name",
                "title": "Hosťujúce družstvo"
            },
            {
                "field": "baseData.matchDate.refData.name",
                "title": "Termín"
            }
        ],
        "properties": {
            "baseData": {
                "title": "Základné údaje",
                "type": "object",
                "properties": {
                    "homeClub": {
                        "title": "Domáce družstvo",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "rosters",
                            "name": "baseData.prName"
                        }
                    },
                    "awayClub": {
                        "title": "Hosťujúce družstvo",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "rosters",
                            "name": "baseData.prName"
                        }
                    },
                    "matchDate": {
                        "title": "Termín stretnutia",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "schedules",
                            "name": "baseData.name"
                        }
                    },
                    "halfTimeStatus": {
                        "title": "Polčasový stav (D:H)",
                        "type": "string",
                        "required": false
                    },
                    "fullTimeStatus": {
                        "title": "Výsledok (D:H)",
                        "type": "string",
                        "required": false
                    },
                    "matchBegin": {
                        "title": "Začiatok stretnutia",
                        "type": "string",
                        "required": true
                    },
                    "attendance": {
                        "title": "Návštevnosť",
                        "type": "string",
                        "required": false
                    },
                    "stadium": {
                        "title": "Štadion",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "stadiums",
                            "name": "baseData.name"
                        }
                    }
                }
            },
            "delegatedPerson": {
                "title": "Delegované osoby",
                "type": "object",
                "properties": {
	                "referee": {
		                "title": "Rozhodca",
                        "type": "object",
                        "required": true,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "aReferee1": {
		                "title": "Asistent rozhodcu",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "aReferee2": {
		                "title": "Asistent rozhodcu",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    },
	                "delegate": {
		                "title": "Delegát",
                        "type": "object",
                        "required": false,
                        "$objectLink": {
                            "registry": "people",
                            "surName": "baseData.surName",
                            "firstName": "baseData.name"
                        },
                        "$objectLinkForcedCriteria": [
                            {
                                "f": "referee.isReferee",
                                "op": "eq",
                                "v": "Áno"
                            }
                        ]
                    }
                }
            },
	    	"officersHome": {
	            "title": "Funkcionári domáceho družstva",
	            "type": "object",
				"render": {
					"width": "full"
				},
	            "properties": {
	                "coach": {
	                    "title": "Tréner",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "aCoach1": {
	                    "title": "Asistent Trénera",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "aCoach2": {
	                    "title": "Asistent Trénera",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "statistic": {
	                    "title": "Štatistik",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "statistic.isStatistic",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "medic": {
	                    "title": "Zdravotník",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "medic.isMedic",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                }
                }
            },
            "listOfHomePlayers": {
                "title": "Nominácia domácich",
                "type": "object",
				"render": {
					"width": "full"
				},
                "properties": {
                    "players": {
                        "title": "Hráči",
                        "type": "array",
                        "items": {
                            "$objectLink": {
                                "registry": "people",
                                "surName": "baseData.surName",
                                "firstName": "baseData.name",
                                "birthDate": "baseData.birthDate",
                                "playerLicense": "player.playerLicense"
                            },
                            "required": true,
                            "$objectLinkForcedCriteria": [
                                {
                                    "f": "player.isPlayer",
                                    "op": "eq",
                                    "v": "Áno"
                                }
                            ]
                        }
                    }
                }
            },
	    	"officersAway": {
	            "title": "Funkcionári hosťujúceho družstva",
	            "type": "object",
				"render": {
					"width": "full"
				},
	            "properties": {
	                "coach": {
	                    "title": "Tréner",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "aCoach1": {
	                    "title": "Asistent Trénera",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "aCoach2": {
	                    "title": "Asistent Trénera",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name",
	                        "license": "coach.coachLicense",
	                        "licenseType": "coach.coachLicenseType"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "coach.isCoach",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "statistic": {
	                    "title": "Štatistik",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "statistic.isStatistic",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                },
	                "medic": {
	                    "title": "Zdravotník",
	                    "type": "object",
	                    "$objectLink": {
	                        "registry": "people",
	                        "surName": "baseData.surName",
	                        "firstName": "baseData.name"
	                    },
	                    "$objectLinkForcedCriteria": [
	                        {
	                            "f": "medic.isMedic",
	                            "op": "eq",
	                            "v": "Áno"
	                        }
	                    ]
	                }
	            }
            },
            "listOfAwayPlayers": {
                "title": "Nominácia hostí",
                "type": "object",
				"render": {
					"width": "full"
				},
                "properties": {
                    "players": {
                        "title": "Hráči",
                        "type": "array",
                        "items": {
                            "$objectLink": {
                                "registry": "people",
                                "surName": "baseData.surName",
                                "firstName": "baseData.name",
                                "birthDate": "baseData.birthDate",
                                "playerLicense": "player.playerLicense"
                            },
                            "required": true,
                            "$objectLinkForcedCriteria": [
                                {
                                    "f": "player.isPlayer",
                                    "op": "eq",
                                    "v": "Áno"
                                }
                            ]
                        }
                    }
                }
            },
            "additionalInfoHome":{
                "title": "Doplňujúce informácie domáci",
                "type": "object",
                "properties": {
	                "approvalHome": {
	                    "title": "Súhlas vedúceho",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "objectionsHome": {
	                    "title": "Námietky",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                }
                }
            },
            "additionalInfoAway":{
                "title": "Doplňujúce informácie hostia",
                "type": "object",
                "properties": {
	                "approvalAway": {
	                    "title": "Súhlas vedúceho",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "objectionsAway": {
	                    "title": "Námietky",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                }
                }
            },
            "refereeReport":{
                "title": "Správa rozhodcu",
                "type": "object",
                "properties": {
	                "note": {
	                    "title": "Popis",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": false
	                },
	                "state": {
	                    "title": "Stav",
	                    "xxtransCode": "schema.people.title.after",
	                    "type": "string",
	                    "required": true,
	                    "enum": [
	                    	"Otvorený",
	                    	"Schválený",
	                    	"Zatvorený"
	                    ],
	                    "render": {
	                        "component": "psui-selectbox",
	                        "searchable": true
	                    }
	                }
                }
            }
        }
    },
    "view": {
        "title": "Detail stretnutia",
        "xxtransCode": "schema.stadium.title",
        "table": "matches",
        "listFields": {
            "$ref": "uri://registries/match#new/listFields"
        },
		"properties": {
            "$ref": "uri://registries/match#new/properties"
        }
    },
    "search": {
        "title": "stretnutie",
        "xxtransCode": "schema.stadium.title",
        "table": "matches",
        "listFields": {
            "$ref": "uri://registries/match#new/listFields"
        },
        "properties": {
            "$ref": "uri://registries/match#new/properties"
        }
    }
}